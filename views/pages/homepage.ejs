<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>

    <div class="container-fluid d-flex justify-content-center align-items-center"
        style="background-color: blue; height: 100vh;">
        <div class="container card w-75" style="height: 80%;">
            <div class="card-header text-center mt-2">
                File Management
            </div>
            <div class="row card-body">
                <div class="col">
                    <div class="d-flex align-items-center h-100">
                        <div class="row">
                            <form action="/api/upload" method="post" enctype="multipart/form-data">
                                <input class="form-control" type="file" id="formFile" name="uploaded_file">
                                <label for="formFile" class="form-label" style="font-size: 12px;">*hanya
                                    pdf,
                                    docx,
                                    txt</label>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <h5>FILE LIST</h5>
                    <div style="height: 90%;">
                        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                            <table class="table">
                                <thead class="text-center">
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">File Name</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            1
                                        </th>
                                        <td style="min-width: 190px; max-width: 200px; ">
                                            FIle Ilang!
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger">Delete</button>
                                            <button type="button" class="btn btn-primary">Edit</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

</body>

</html>